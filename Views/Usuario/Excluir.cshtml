@model Usuario

<h1>ATENÇÃO!</h1>
<h2>Tem certeza que deseja exluir o Usuário @Model.Nome (@Model.Login)?</h2>
<p>A ação é irreversível!</p>

<form action="Excluir" method="post">
    <input type="hidden" name="id" value="@Model.Id">

    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR">
</form>